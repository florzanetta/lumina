#!/bin/sh
echo ""
echo "Checking pep8..."
echo ""
pep8 --show-source --statistics --max-line-length=120 --exclude=lumina/migrations --show-source lumina
EXITSTATUS=$?
if [ "$EXITSTATUS" -eq "0" ] ; then
	echo "pep8 OK :-D"
else
	echo ""
	echo "ERROR: pep8 found errors... Fix'em an try to commit again."
	echo ""
fi
exit $EXITSTATUS
